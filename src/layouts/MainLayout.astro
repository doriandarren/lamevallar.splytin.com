---
import Navbar from "../components/navbar/Navbar.astro";
import "../styles/global.css";
import ClientRouter from 'astro/components/ClientRouter.astro';
import type { SupportedLang } from '../i18n/utils';
import Footer from "../components/footer/Footer.astro";

import 'aos/dist/aos.css';  // Importa los estilos de AOS en el layout global
import AOS from 'aos';

interface Props {
    title: string;
    lang: SupportedLang;
    description?: string;
    keyword?: string;
    ogTitle?: string;
    ogDescription?: string;
    ogImage?: string;
    ogUR?: string;
    ogType?: string;
}

const {
  title, 
  lang, 
  description = "Descripción clara de tu negocio o sitio web. Idealmente entre 140 y 160 caracteres.",
  keyword = "palabra clave 1, palabra clave 2, nombre de marca, servicio principal",
  ogTitle = "Nombre de tu sitio o título atractivo",
  ogDescription = "Resumen que aparece al compartir en redes.",
  ogImage = "https://tusitio.com/img/preview.jpg",
  ogUR = "https://tusitio.com",
  ogType = "website",
} = Astro.props;


const author = 'lamevallar';


---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- TODO esto va dinamico -->
    <!-- Descripción que se muestra en Google -->
    <meta name="description" content={description}>
    <!-- Palabras clave (Google ya no la usa, pero algunos motores sí) -->
    <meta name="keywords" content={keyword}>
    <!-- Autor -->
    <meta name="author" content={author}>
    <!-- Indexación y seguimiento (importante) -->
    <meta name="robots" content="index, follow">
    <!-- Icono de pestaña -->
    <link rel="icon" href="./img/favicon.ico" type="image/x-icon">
    <!-- Open Graph para compartir en redes sociales -->
    <meta property="og:title" content={ogTitle}>
    <meta property="og:description" content={ogDescription}>
    <meta property="og:image" content={ogImage}>
    <meta property="og:url" content={ogUR}>
    <meta property="og:type" content={ogType}>

    <!-- END esto va dinamico -->

    
    <!-- <script src="https://unpkg.com/alpinejs" is:inline defer></script> -->

    <title>{title}</title>

    <ClientRouter />
    
  </head>
  <body class="overflow-x-hidden bg-background">
    
    <!-- Navbar -->
    <Navbar lang={lang} />

    <main class="w-full overflow-x-hidden">
      <slot />
    </main>
    

    <Footer />

    <script>
      import AOS from 'aos';
      AOS.init();
    </script>
    
  </body>
</html>