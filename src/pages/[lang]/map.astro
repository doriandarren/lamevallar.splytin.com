---
import MainLayout from "@layouts/MainLayout.astro";
import { getStaticPaths, getI18nProps } from "@i18n/helperi18n";
import MapComponent from "@components/maps/MapComponent.astro";

export { getStaticPaths };

const { lang, t, title } = getI18nProps(Astro.params, "map");

// SEO - Mapa y Localización
const description = 'Encuentra La Meva Llar, bar restaurante mediterráneo. Consulta nuestra ubicación exacta, cómo llegar y planifica tu visita para disfrutar de tapas, desayunos y platos caseros.';
const keyword = 'la meva llar ubicación, cómo llegar restaurante, mapa restaurante mediterráneo, restaurante cerca de mí, restaurante familiar ubicación, restaurante con terraza dirección, La Meva Llar mapa, localización bar restaurante, dirección restaurante mediterráneo, restaurante Costa Brava, parking restaurante mediterráneo';

// OG - Map
const ogTitle = "La Meva Llar | Mapa y Localización";
const ogDescription = description;
const ogImage = "https://lamevallar.splytin.com/images/og-home.jpg"; 
const ogURL = "https://lamevallar.splytin.com/map";
const ogType = "website";


---

<MainLayout 
  title={title} 
  lang={lang}
  description={description}
  keyword={keyword}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
  ogURL={ogURL}
  ogType={ogType}
>
  
  <div class="section">
    <MapComponent />
  </div>

</MainLayout>
