---
import MainLayout from '@layouts/MainLayout.astro';
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';
import ContactComponent from '@components/contact/ContactComponent.astro';

export { getStaticPaths };

const { lang, t, title } = getI18nProps(Astro.params, 'contact');


// SEO - Contacto
const description = 'Contacta con La Meva Llar, bar restaurante mediterráneo. Reserva tu mesa, consulta disponibilidad o solicita información sobre nuestros menús y eventos especiales.';
const keyword = 'la meva llar contacto, reservar mesa restaurante, teléfono restaurante mediterráneo, contactar restaurante, reserva online bar, restaurante con tapas, restaurante mediterráneo reservas, contactar bar restaurante, localización restaurante, horarios restaurante, restaurante familiar contacto';

// OG - Contacto
const ogTitle = "La Meva Llar | Contacto y Reservas";
const ogDescription = description;
const ogImage = "https://lamevallar.splytin.com/images/og-home.jpg"; 
const ogURL = "https://lamevallar.splytin.com/contact";
const ogType = "website";

---


<MainLayout 
  title={title} 
  lang={lang}
  description={description}
  keyword={keyword}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
  ogURL={ogURL}
  ogType={ogType}
>

  <div class="section">

    <ContactComponent title={title}/>

  </div>

</MainLayout>