---
import MainLayout from '@layouts/MainLayout.astro';
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';
import AboutComponent from '@components/about/AboutComponent.astro';

export { getStaticPaths };

const { lang, t, title } = getI18nProps(Astro.params, 'about');

const description = 'Descripción clara de tu negocio o sitio web. Idealmente entre 140 y 160 caracteres.';

// OG
const ogTitle = "La meva llar | Quienes somos";
const ogDescription = "Somos un bar restaurant gastrónomico de cocina mediterranea";
const ogImage = "https://tusitio.com/img/preview.jpg";
const ogUR = "https://lamevallar.splytin.com";
const ogType = "website";

---

<MainLayout 
  title={title} 
  lang={lang}
  description={description}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
  ogUR={ogUR}
  ogType={ogType}
>

  <div class="section">
    <AboutComponent title={title} />
  </div>
  
</MainLayout>
