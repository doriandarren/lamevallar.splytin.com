---
import MainLayout from '@layouts/MainLayout.astro';
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';
import AboutComponent from '@components/about/AboutComponent.astro';

export { getStaticPaths };

const { lang, t, title } = getI18nProps(Astro.params, 'about');

// SEO - About
const description = 'Conoce La Meva Llar, restaurante con esencia mediterránea donde compartimos sabores auténticos, recetas caseras y un ambiente acogedor para disfrutar en compañía.';
const keyword = 'la meva llar, sobre nosotros, quienes somos, restaurante mediterráneo, historia restaurante, cocina casera, tapas tradicionales, platos mediterráneos, ambiente familiar, esencia mediterránea, restaurante acogedor, gastronomía mediterránea, comida local, tradición y sabor';

// OG - About
const ogTitle = "La Meva Llar | Sobre Nosotros";
const ogDescription = description;
const ogImage = "https://lamevallar.splytin.com/images/og-home.jpg"; 
const ogURL = "https://lamevallar.splytin.com/about";
const ogType = "website";


---

<MainLayout 
  title={title} 
  lang={lang}
  description={description}
  keyword={keyword}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
  ogURL={ogURL}
  ogType={ogType}
>

  <div class="section">
    <AboutComponent title={title} />
  </div>
  
</MainLayout>
