---
import AboutComponent from '@components/about/AboutComponent.astro';
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';
import MainLayout from '@layouts/MainLayout.astro';
import ContactComponent from '@components/contact/ContactComponent.astro';
import IndexComponent from '@components/index/IndexComponent.astro';
import MapComponent from '@components/maps/MapComponent.astro';
import MenuComponent from '@components/menu/MenuComponent.astro';

export { getStaticPaths };

const { lang, t, title } = getI18nProps(Astro.params, 'home');

// SEO
const description = 'La Meva Llar, bar restaurante con esencia mediterránea: desayunos, tapas, postres y platos caseros en un ambiente cálido y familiar.';
const keyword = 'la meva llar, restaurante mediterráneo, tapas, desayunos, postres, comida casera, bar Buenos Aires, bar mediterráneo, barcelona, bar barcelona';

// OG
const ogTitle = "La Meva Llar | Restaurante Mediterráneo";
const ogDescription = description;
const ogImage = "https://lamevallar.splytin.com/images/og-home.jpg";
const ogURL = "https://lamevallar.splytin.com";
const ogType = "website";

---


<MainLayout 
  title={title} 
  lang={lang}
  description={description}
  keyword={keyword}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
  ogURL={ogURL}
  ogType={ogType}
>


  <IndexComponent title={title} />

  
  <AboutComponent title={title} />
  

  <MenuComponent title={title} />
  
  
  <ContactComponent title={title}/>
  
  
  <MapComponent title={title} />


</MainLayout>
