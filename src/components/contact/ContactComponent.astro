---
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';

export { getStaticPaths };

interface Props {
  title?: string; 
}

const { lang, t, title } = getI18nProps(Astro.params, 'contact');
---


<section
  id="location"
  class="relative bg-fixed bg-center bg-cover bg-no-repeat"
  style="background-image: url('/images/location.webp');"
>
  <!-- Overlay oscura -->
  <div class="absolute inset-0 bg-black/60"></div>

  <!-- Contenido -->
  <div class="relative z-10 flex flex-col items-center justify-center min-h-[60vh] px-6 text-center text-white">
    <h2>{t('location.title')}</h2>
    <p>{t('location.address')}</p>
    <p>{t('location.hours')}</p>
    <p>{t('location.phone')}</p>
    <p class="italic-note">{t('location.note')}</p>
  </div>
</section>





