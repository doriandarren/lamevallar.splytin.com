---
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';
import MapComponentReact from './MapComponentReact';


export { getStaticPaths };

interface Props {
  title?: string; 
}

const { lang, t, title } = getI18nProps(Astro.params, 'map');

---



<section id="map">
  <div class="max-w-7xl mx-auto text-center space-y-4">
    <h2 class="text-3xl font-bold text-black">{t("map.heading")}</h2>
    <p class="text-lg text-black">{t("map.description")}</p>
  </div>

  <div class="max-w-5xl mx-auto mt-8 px-4">
    <MapComponentReact client:only="react" />
  </div>
</section>

